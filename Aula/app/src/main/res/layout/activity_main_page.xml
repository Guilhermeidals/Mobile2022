<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainPage">

    <LinearLayout
        android:id="@+id/NavBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_orange"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-65dp">

        <ImageButton
            android:id="@+id/News"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTintMode="add"
            android:contentDescription="NEWS"
            android:minHeight="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/news"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/Status"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="STATUS"
            android:scaleType="fitXY"
            android:src="@drawable/status"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/Book"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="BOOK"
            android:scaleType="fitXY"
            android:src="@drawable/book"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/CheckInOut"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="CHECK IN OUT"
            android:scaleType="fitXY"
            android:src="@drawable/check_in_out"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/Orders"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="ORDER"
            android:minHeight="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/orders"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/CSHelp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="CUSTOMER SERVICE"
            android:minHeight="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/customer_service"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/Exchange"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="EXCHANGE ROOM"
            android:minHeight="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/exchange"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="APP Climatempo"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="421dp"
        app:layout_constraintBottom_toTopOf="@+id/NavBar"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:layout_editor_absoluteX="2dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Noticia :D" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+ Noticias" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+ Noticias" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+ Noticias" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+ Noticias" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_orange"
        android:fontFamily="serif"
        android:text="@string/HotelName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>